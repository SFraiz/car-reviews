<!DOCTYPE html>
<html>
  <head>
    <title>CarReviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <img src="/assets/fondo_web.png" id="header-image">
    <nav class="navbar navbar-light bg-faded">
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <%= link_to 'Home', '/', :id => "nav-link" %>
        </li>
        <li class="nav-item">
          <% if user_signed_in? %>
            <%= link_to 'Profile', user_path(current_user.id), :id => "nav-link" %>
          <% else %>
            <%= link_to 'Profile', '/users', :id => "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to 'Users', '/users', :id => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Reviews', '/reviews', :id => "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Buy pages', '/buy_pages', :id => "nav-link" %>
        </li>
      </ul>
    </nav>
    
    <div class="container clearfix" id="container">
    	<% if user_signed_in? %>
    		Welcome <%= current_user.nickname %>,
    		<%= link_to destroy_user_session_path, method: 'DELETE' do %>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Logout
        <% end %>
    	<% else %>
    		<h2>Nobody logged in</h2>
        <%= link_to new_user_session_path, method: 'GET' do %> 
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Login |
        <% end %>
        <%= link_to 'Sign up', new_user_registration_path, method: 'GET' %> 
    	<% end %>
      <%= yield %>
    </div>
    <footer><p class="text-center">Car Reviews</p></footer>
  </body>
</html>
