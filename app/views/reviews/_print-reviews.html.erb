<li class="review-list">
	<div class="row review">
		<div class="col-md-3">
			<img src="/assets/Models/<%= @review.car.model_photo %>" alt="">
		</div>
		<div class="col-md-3">
			<em>By:</em> <%= @review.user.nickname %><br>
			<em>Brand:</em> <%= @review.car.brand %><br>
			<em>Fuel type:</em> <%= @review.fuel_type %>
		</div>
		<div class="col-md-3">
			<em>Car year:</em> <%= @review.model_year %><br>
			<em>Model:</em> <%= @review.car.model %><br>
			<em>Engine type:</em> <%= @review.engine_type %>
		</div>
		<div class="col-md-3">
			<% @review.punctuation.times do %>
				<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
			<% end %>
			<% (5-@review.punctuation).times do %>
				<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
			<% end %><br>
			<em>kilometers:</em> <%= @review.kilometers %> km<br>
			<em>Horsepower:</em> <%= @review.horsepower %> hp<br><br>
		</div>
			<div class="col-md-12">
				<em>Comment:</em><br>
			<div class="review-comment">	
				<%= @review.comment %>
			</div>
		</div>
	</div>
	<% if (@user && current_user.id == @user.id) || (current_user.id == @review.user.id) %>
		<%= link_to edit_review_path(@review.id),:class => 'btn btn-primary btn-xs', method: 'GET' do %> 
 			Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
 		<% end %>
		<%= link_to review_path(@review.id), :class => 'btn btn-primary btn-xs', method: :delete, data: { confirm: 'Are you sure?' } do %> 
 			Delete <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><br>
		<% end %>
	<% end %>
</li>