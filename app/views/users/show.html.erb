<div class="profile-header">	
	<h1><%= image_tag @user.profile_picture.url(:medium) %> <%= @user.nickname %></h1>

	<% if current_user.id == @user.id %>
		<%= link_to edit_user_registration_path, :class => 'btn btn-primary btn-xs', method: 'GET' do %> 
	    Edit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
	  <% end %>
		<%= link_to "/users/#{@user.id}", :class => 'btn btn-primary btn-xs', method: :delete, data: { confirm: 'Are you sure?' } do %> 
	    Delete <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
	  <% end %><br><br>
		<%= link_to new_review_path, :class => 'btn btn-primary btn-sm',  method: 'GET' do %> 
	    New Review <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
	  <% end %>
	<% end %><br>
</div>

<ul>
	<% @user.reviews.sort_by(&:updated_at).reverse!.each do |review| %>
		<% @review = review %> 
		<%= render "reviews/print-reviews" %>
	<% end %>

</ul>